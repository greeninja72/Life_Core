doctype html
html
    head
        meta(charset='utf-8')
        title Life Core
        style.
            table {                             
                border: 1px solid black;
                border-collapse: collapse;                
            }
            table th, table td {
                border: 1px solid black;
            }
            #user-form, #update-form{
                float: left;
            }           
    body
        div
            form#user-form
                fieldset
                    legend Create
                    div
                        input#pid(type="text" placeholder="Product ID")
                    div
                        input#water(type="number" placeholder="Water Size")
                    div
                        input#filter(type="number" placeholder="Filter Size")
                    button(type="submit") create
            form#update-form
                fieldset
                    legend Update
                    div
                        input#pid(type="text" placeholder="Update Product ID")
                    div
                        input#water(type="number" placeholder="Update Water Size")
                    div
                        input#filter(type="number" placeholder="Update Filter Size")
                    button(type="submit") update             
            table#user-list
                thead
                    tr  
                        th id
                        th pid   
                        th language  
                        th water 
                        th filter
                        th notify       
                    tbody
                        for user in users
                            tr
                                td= user.id
                                td= user.pid
                                td= user.language
                                td= user.water
                                td= user.filter
                                td= user.notify ? "true" : "false"    
            
script(src="/javascripts/lifecore.js")
                        